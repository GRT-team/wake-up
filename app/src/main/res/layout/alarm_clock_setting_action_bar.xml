<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:divider="?attr/dividerVertical"
    android:dividerPadding="12dp"
    android:orientation="horizontal"
    android:showDividers="end" >

    <TextView
        android:id="@+id/save_menu_item"
        style="@style/Widget.Sherlock.ActionBar.TabText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/clock_setting_menu_item"
        android:drawableLeft="@drawable/ic_accept"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:text="@string/alarm_setting_menu_done"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>